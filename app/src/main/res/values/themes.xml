<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.CoupleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/neon_yellow</item>
        <item name="colorSecondaryVariant">@color/neon_yellow</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/neon_yellow</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.CoupleApp.Button</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.CoupleApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/neon_yellow</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
    </style>
</resources>
